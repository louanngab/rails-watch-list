<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new list</h3>
        <%= simple_form_for @list, html: { multipart: true } do |f| %>
          <%= f.input :name, placeholder: 'Drama' %>
          <%= f.input :photo, as: :file, label: "Image de couverture (optionnelle)" %>
          <%= f.submit "Create List", class: 'btn btn-flat mt-2' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
